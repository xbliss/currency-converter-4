{
  "name": "Exchange Rate",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Calculate live currency and foreign-exchange rate",
  "content_security_policy": "script-src 'self' https://fonts.googleapis.com; object-src 'self'",
  "icons": {
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "128": "images/icon-128.png"
    },
    "default_title": "Exchange Rate",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+4",
        "windows": "Ctrl+Shift+4",
        "linux": "Ctrl+Shift+4",
        "mac": "Command+Shift+4"
      }
    }
  }
}
